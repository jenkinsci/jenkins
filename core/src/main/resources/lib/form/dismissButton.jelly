<?jelly escape-by-default='true'?>
<j:jelly xmlns:j="jelly:core" xmlns:s="jelly:stapler" xmlns:l="/lib/layout">
  <s:documentation> <![CDATA[
    Dismiss button with cross icon. Used in administrative monitor alerts.
    The icon color inherits from the parent alert's text color for proper contrast.
    ]]>
    <s:attribute name="name">
      If specified, becomes the value of the name attribute.
      When you have more than one submit button on the form, this can be used to determine
      which button is pressed, as the server will get a parameter by this name.
      Defaults to 'Dismiss'.
    </s:attribute>
    <s:attribute name="value">
      The value attribute of the button, defaults to localized 'Dismiss' text.
    </s:attribute>
  </s:documentation>

  <button name="${attrs.name ?: 'Submit'}" value="${attrs.value ?: '%Dismiss'}" formNoValidate="formNoValidate" class="jenkins-button jenkins-submit-button" style="padding: 0; width: 38px; height: 38px; border-radius: 100%; background: transparent; color: inherit;">
      <span class="jenkins-visually-hidden">${attrs.value ?: '%Dismiss'}</span>
      <l:icon src="symbol-close" />
  </button>
</j:jelly>

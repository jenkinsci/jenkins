<!--
  Manage monitoring
-->
<?jelly escape-by-default='true'?>
<j:jelly xmlns:j="jelly:core" xmlns:st="jelly:stapler" xmlns:d="jelly:define" xmlns:l="/lib/layout" xmlns:t="/lib/hudson" xmlns:f="/lib/form" xmlns:i="jelly:fmt">
  <l:layout permission="${app.ADMINISTER}" title="${%Node Monitoring Configuration}" norefresh="true">
    <st:include page="sidepanel.jelly" />
    <l:main-panel>
      <!-- to make the form field binding work -->
      <j:set var="instance" value="${it}" />
      <j:set var="descriptor" value="${it.descriptor}" />

      <f:form method="post" action="configSubmit" name="config">
        <f:descriptorList title="${%Preventive Node Monitoring}"
                          descriptors="${it.nodeMonitorDescriptors}"
                          instances="${it.nonIgnoredMonitors}" />

        <f:bottomButtonBar>
          <f:submit value="${%OK}" />
          <f:apply />
        </f:bottomButtonBar>
      </f:form>
      <st:adjunct includes="lib.form.confirm" />
    </l:main-panel>
  </l:layout>
</j:jelly>
